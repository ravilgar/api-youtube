<% include partials/header.ejs %>

<% include partials/formForSearch.ejs %>

<p>Вы искали: <strong> <%=  query %> </strong></p>


<ol class="accordion">
    <% data.forEach(function(video) { %>
      <li>
        
          Название ролика - 
          <strong class="title">
              <%= video.search.snippet.title %>
          </strong>          

        <p>
              Автор - <%=video.search.snippet.channelTitle%>          
        </p>        
        <p>
              Дата публикации - <%= new Date(video.search.snippet.publishedAt) %>
              <br>
        </p>
        <p>
              Количество просмотров - <%= video.statistics.viewCount.replace(/(\d{1,3}(?=(\d{3})+(?:\.\d|\b)))/g,"\$1 ") %>
              <br>
        </p>
        <div class="player"> 
        <iframe width="300" height="240" src=<%= "https://www.youtube.com/embed/"+ video.search.id.videoId %> frameborder="0" ></iframe>
        </div>
        
      </li>
    <% }) %>
</ol>



<% include partials/footer.ejs %>